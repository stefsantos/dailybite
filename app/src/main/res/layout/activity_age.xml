<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Title text -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:text="Whatâ€™s your age?"
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium" />

    <!-- Subtitle text -->
    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Required number of calories varies with age"
        android:textAlignment="center"
        android:textColor="#7A7A7A"
        android:textSize="14sp" />

    <!-- Age input -->
    <EditText
        android:id="@+id/age_input"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/subtitle_text"
        android:layout_marginTop="100dp"
        android:hint="|"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="18sp"
        android:inputType="number" />

    <!-- Unit label for years -->
    <TextView
        android:id="@+id/years_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/age_input"
        android:layout_alignBaseline="@id/age_input"
        android:layout_marginStart="10dp"
        android:text="Years"
        android:textColor="#00C853"
        android:textSize="18sp"
        android:padding="5dp" />

    <!-- Back Text -->
    <TextView
        android:id="@+id/back_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:text="Back"
        android:textSize="14sp"
        android:textColor="#7A7A7A" />

    <!-- Next Circular Button -->
    <ImageButton
        android:id="@+id/next_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/ellipse"
        android:src="@drawable/next_arrow"
        android:scaleType="centerInside"
        android:contentDescription="Next" />

</RelativeLayout>
